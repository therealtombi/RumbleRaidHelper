{
    "manifest_version": 3,
    "name": "Rumble Raid Helper",
    "version": "1.1",
    "description": "ALT + Right Click to raid, or use the Raid menu to pick a live stream.",
    "permissions": ["storage", "scripting", "activeTab"],
    "host_permissions": [                  
        "*://rumble.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["*://*.rumble.com/*"],
            "js": ["content.js"]
        }
    ],
    "options_page": "options.html",
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "48": "icons/icon48.png"
        },
        "default_title": "Rumble Raid Helper"
    },
    "author": "TheRealTombi",
    "homepage_url": "https://rumble.com/user/TheRealTombi",
    "web_accessible_resources": [          
        {
            "resources": ["icons/bg.png"],
            "matches": ["<all_urls>"]
        }
    ]
}